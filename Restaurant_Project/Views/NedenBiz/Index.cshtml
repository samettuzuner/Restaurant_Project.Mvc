@using Restaurant_Project.Models.Entity
@model List<Tbl_NedenSecmelisiniz>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Neden Biz ? Ekranı</h2>
<br />


<div class="card-body table-full-width table-responsive">
    <table class="table table-hover">
        <thead>
        <th style="width: 20%;">Başlık</th>
        <th style="width: 40%;">Açıklama</th>
        <th style="width: 15%;">Güncelle</th>


        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Baslik</td>
                    <td>@item.Aciklama</td>
                    <td><button type="button" class="btn btn-success" data-toggle="modal" data-target="#@item.ID">Güncelle</button></td>

                    <div class="modal fade" id="@item.ID" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4>Ürün Bilgisi Düzenleme Sayfası</h4>
                                </div>
                                <div class="modal-body">
                                    <form method="post" action="/NedenBiz/NedenGuncelle/@item.ID">
                                        <div class="modal-body">
                                            <label>Başlık</label>
                                            <input type="text" name="Baslik" class="form-control" value="@item.Baslik">
                                            <label>Açıklama</label>
                                            <textarea class="form-control" name="Aciklama" rows="15" style="  height: 150px;">@item.Aciklama</textarea>

                                        </div>
                                        <br />
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-warning">Güncelle</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </tr>
            }
        </tbody>
    </table>
</div>
