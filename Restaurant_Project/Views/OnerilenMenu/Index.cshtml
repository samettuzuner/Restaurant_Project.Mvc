
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Önerilen Menüler</h2>

<!DOCTYPE html>
<html>
<body>
    <div class="container">
        <a type="submit" class="text-success" data-toggle="modal" data-target="#myModal"><i class="fas fa-pen"></i></a>
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>Mesaj</h3>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>

                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="textbox1">Fiyat:</label>
                                <input type="text" class="form-control" id="textbox1" placeholder="₺">
                            </div>
                            <div class="form-group">
                                <label for="textbox2">Açıklama:</label>
                                <input type="text" class="form-control" id="textbox2" placeholder="Açıklama Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="textbox2">Resim URL:</label>
                                <input type="text" class="form-control" id="textbox2" placeholder="Resim URL Adresi">
                            </div>
                            <div class="modal-footer" id="myFooter">
                                <button type="submit" class="btn btn-primary">Güncelle</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
